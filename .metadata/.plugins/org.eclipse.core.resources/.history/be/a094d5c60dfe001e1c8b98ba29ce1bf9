apiVersion: apps/v1
kind: Deployment
metadata:
  name: db
  labels:
    app: db
spec:
  replicas: 1
  selector:
    matchLabels:
      app: db
  template:
    metadata:
      labels:
        app: db
    spec:
      containers:
        - name: db
          image: mysql
          imagePullPolicy: Always
          env:
            - name: MYSQL_ROOT_PASSWORD
              value: root
            - name: MYSQL_USER
              value: root


---
apiVersion: v1
kind: Service
metadata:
  name: mysql-svc
spec:
  ports:
    - name: db
      port: 80
      targetPort: 3306
  selector:
    app: db
  