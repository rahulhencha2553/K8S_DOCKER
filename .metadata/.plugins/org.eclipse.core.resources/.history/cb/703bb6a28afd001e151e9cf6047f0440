apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: parent-project
  name: parent-project
spec:
  # 3 Pods should exist at all times.
  replicas: 2
  selector:
    matchLabels:
      app: parent-project
  template:
    metadata:
      labels:
        # Apply this label to pods and default
        # the Deployment label selector to this value
        app: parent-project
    spec:
       containers:
        - name: eureka-server
          image: r2553/eureka-server:02
          env:
            - name: SPRING_PROFILES_ACTIVE
              value: docker
            - name: EUREKA_SERVER_ADDRESS
              value: http://parent-project-0.parent-project:8761/eureka
            - name: SERVICE_NAME
              value: parent-project
              
        - name: api-gateway
          image: r2553/api-gateway:02
          env:
            - name: SPRING_PROFILES_ACTIVE
              value: docker
            - name: EUREKA_SERVER_URL
              value: http://parent-project-0.parent-project.default.svc.cluster.local:8761/eureka
              
        - name: authentication
          image: r2553/authentication:02
          env:
            - name: SPRING_PROFILES_ACTIVE
              value: docker
            - name: EUREKA_SERVER_URL
              value: http://parent-project-0.parent-project.default.svc.cluster.local:8761/eureka
            - name: MYSQL_HOST
              value: mysql
            - name: MYSQL_PORT
              value: 3306
            - name: MYSQL_USERNAME
              value: root
            - name: MYSQL_PASSWORD
              value: root
              
        - name: mysql
          image: mysql
          env:
            - name: MYSQL_USER
              value: root
            - name: MYSQL_ROOT_PASSWORD
              value: root
            

          
       restartPolicy: Always
    
---


apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: parent-project
spec:
  serviceName: "parent-project"
  replicas: 1
  selector:
    matchLabels:
      app: parent-project
  template:
    metadata:
      labels:
        app: parent-project
    spec:
      containers:
        - name: eureka-server
          image: r2553/eureka-server:02
          imagePullPolicy: Always
          env:
            - name: SPRING_PROFILES_ACTIVE
              value: docker
            - name: EUREKA_SERVER_ADDRESS
              value: http://parent-project-0.parent-project:8761/eureka
            - name: SERVICE_NAME
              value: parent-project

---

apiVersion: v1
kind: Service
metadata:
  # Unique key of the Service instance
  name: parent-project
  labels:
    app: parent-project
spec:
  ports:
    # Accept traffic sent to port 80
    - name: http-eureka
      port: 8761
      targetPort: 8761
      
    - name: http-api-gateway
      port: 9090
      targetPort: 9090
      
    - name: http-authentication
      port: 7771
      targetPort: 7771
      
    - name: tcp
      port: 3306
      targetPort: 3306
      
      
  selector:
    # Loadbalance traffic across Pods matching
    # this label selector
    app: parent-project
  # Create an HA proxy in the cloud provider
  # with an External IP address - *Only supported
  # by some cloud providers*
  type: LoadBalancer
  
  
  
