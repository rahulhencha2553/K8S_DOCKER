apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: parent-project
  name: parent-project
spec:
  # 3 Pods should exist at all times.
  replicas: 2
  selector:
    matchLabels:
      app: parent-project
  template:
    metadata:
      labels:
        # Apply this label to pods and default
        # the Deployment label selector to this value
        app: parent-project
    spec:
       containers:
        - name: eureka-server
          image: r2553/eureka-server:latest
          env:
            - name: SPRING_PROFILES_ACTIVE
              value: docker
          

       restartPolicy: Always
    
---

apiVersion: v1
kind: Service
metadata:
  # Unique key of the Service instance
  name: parent-service
spec:
  ports:
    # Accept traffic sent to port 80
    - name: http-eureka
      port: 8761
      targetPort: 8761
      
    - name: http-api-gateway
      port: 9090
      targetPort: 9090
      
    - name: http-authentication
      port: 7771
      targetPort: 7771
      
    - name: tcp
      port: 3306
      targetPort: 3306
      
      
  selector:
    # Loadbalance traffic across Pods matching
    # this label selector
    app: parent-project
  # Create an HA proxy in the cloud provider
  # with an External IP address - *Only supported
  # by some cloud providers*
  type: LoadBalancer
  
  
  
