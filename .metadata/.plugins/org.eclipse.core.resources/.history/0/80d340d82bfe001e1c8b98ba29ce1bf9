apiVersion: apps/v1
kind: Deployment
metadata:
  name: auth-app
  labels:
    app: auth-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app : auth-app
  template:
    metadata:
      labels:
        app: auth-app
    spec:
      containers:
      - name: authentication
        image: r2553/authentication:02
        imagePullPolicy: Always

---

kind: Service
apiVersion: v1
metadata:
  name:  user-service-svc
spec:
  selector:
    app:  auth-app
  ports:
  - port: 80
    targetPort:  7771
  type: LoadBalancer