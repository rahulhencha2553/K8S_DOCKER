apiVersion: apps/v1
kind: Deployment
metadata:
  name: mysql
spec:
  selector:
    matchLabels:
      app: mysql
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: mysql
    spec:
      containers:
      - image: mysql:latest
        name: mysql
        env:
         - name: MYSQL_ROOT_PASSWORD
           value: 2553
         - name: MYSQL_PASSWORD
           value: 2553	  
         - name: MYSQL_USER
           value: rahul
        ports:
        - containerPort: 3306
          name: mysql

---
apiVersion: v1
kind: Service
metadata:
  name: mysql
spec:
  type: LoadBalancer
  ports:
   - name: db
     port: 3306
     targetPort: 3307
  selector:
    app: mysql